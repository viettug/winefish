prefix=@prefix@
exec_prefix=@exec_prefix@
mandir = @mandir@

INSTALL = @INSTALL@
INSTALL_DIR = $(INSTALL) -d -m 755
INSTALL_DATA = ${INSTALL} -m 644

all:

install:
	$(INSTALL_DIR) $(DESTDIR)$(mandir)/man1
	$(INSTALL_DATA) winefish.1 $(DESTDIR)$(mandir)/man1

uninstall:
	rm -f $(DESTDIR)$(mandir)/man1/winefish.1

clean:

distclean: clean
